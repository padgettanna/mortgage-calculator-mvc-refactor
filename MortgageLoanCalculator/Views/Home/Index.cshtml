@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Understand Your Mortgage Before You Commit</h1>
    <p class="lead mt-3">Calculate your monthly mortgage payments with ease and accuracy</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Why Use Our Calculator?</h2>
                    <p class="card-text">
                        Our comprehensive mortgage calculator helps you understand your potential monthly payments,
                        total interest costs, and overall loan details. Make informed decisions about your home purchase
                        with accurate calculations tailored to your financial situation.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Payment Breakdown</h5>
                    <p class="card-text">
                        Get precise monthly payment estimates including principal, interest, HOA fees, and more.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Term Comparison</h5>
                    <p class="card-text">
                        Compare different loan terms to find the best option for your budget and financial goals.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Affordability Check</h5>
                    <p class="card-text">
                        Understand how your annual income relates to your mortgage payment with debt-to-income calculations.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8 mx-auto text-center">
            <h3 class="mb-4">Ready to Get Started?</h3>
            <p class="mb-4">Calculate your mortgage payments in just a few simple steps.</p>
            <a asp-controller="Loan" asp-action="Create" class="btn btn-primary btn-lg">Start Calculating</a>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        <div class="col-md-10 mx-auto">
            <div class="alert alert-info">
                <h5 class="alert-heading">What You'll Need:</h5>
                <ul class="mb-0">
                    <li>Property details (price, market value, HOA fees)</li>
                    <li>Loan preferences (term, interest rate)</li>
                </ul>
            </div>
        </div>
    </div>
</div>
